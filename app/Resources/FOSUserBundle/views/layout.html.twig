{% extends 'AppBundle:base.html.twig' %}

{% block body %}
    <div data-role="page" class="homepage">
        <div data-role="content" class="ui-content">
             <div class="backgroundImage">
        </div>

            <div class="container">
                <h3>Welcome to</h3>
                <div class="logoHome">
                    <img src="/images/logo_home.png" alt="staff-me">
                </div>
                <h4>Find the perfect match to your need</h4>
                <a href="#" class="ui-btn ui-corner-all loginButton" data-theme="b" data-transition="slide">login</a>
                <div class="loginPage">
                    {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages %}
                            <div class="{{ type }}">
                                {{ message|trans({}, 'FOSUserBundle') }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    {% block fos_user_content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


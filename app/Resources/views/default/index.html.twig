{% extends 'base.html.twig' %}

{% block body %}
    <div id="transparent">	
    </div>
	
	<div id="container">
			<h3>Welcome to</h3>
			<h1>STAFF ME</h1>
			<h4>Find the perfect match to your need</h4>
	</div>
{% endblock %}

{% block stylesheets %}
<style>
	body{
		background: url("/images/find-people.jpg") center 0% repeat-x;
		background-size: auto 1400px;
		font-family: Arial,Helvetica Neue,Helvetica,sans-serif;
	}
	h1,h3,h4{
		text-align:center;
		color:#FFF;
	}
	h1{
		font-size: 136px;
	}
	
	h3{
		font-size: 62px;
	}
	h4{
		font-size: 48px;
	}
	div{
		display:block; 
		height:100%; 
		width:100%; 
		top:0px; 
		left:0px;  
		overflow:auto;
	}
	#transparent{
		position:absolute; 
		background: #000;
		opacity: 0.5;
		z-index: -1;
	}
	#container{
		padding: 100px 0px;
	}
	
	@media all and (min-width: 1024px){
		h1{
		font-size: 78px;
		}
		
		h3{
			font-size: 36px;
		}
		h4{
			font-size: 28px;
		}
	}
</style>
{% endblock %}
